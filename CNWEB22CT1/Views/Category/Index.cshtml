@model IEnumerable<ProductModel>
<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>
<style>
	/* Điều chỉnh chiều rộng của hình ảnh sản phẩm */
	.product-image-wrapper .single-products img {
		width: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều rộng của container */
		height: 200px; /* Thiết lập chiều cao cố định */
		object-fit: cover; /* Cắt hình ảnh theo tỷ lệ và đảm bảo không bị méo */
	}

	/* Điều chỉnh cho các sản phẩm để các phần tử trong cùng một hàng có chiều cao đồng đều */
	.product-image-wrapper {
		margin-bottom: 20px;
		height: 100%; /* Đảm bảo tất cả các phần tử sản phẩm có chiều cao bằng nhau */
	}

	.col-sm-4 {
		padding: 15px;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	/* Điều chỉnh layout của các phần tử trong sản phẩm */
	.productinfo {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%;
	}

	.product-image-wrapper {
		height: 530px;
	}
	/* Thêm hiệu ứng khi hover */
	
</style>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Features Items</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
				
						<div class="single-products">
							<a asp-action="Details" asp-controller="Product" asp-route-Id="@item.Id" >
							<div class="productinfo text-center">
								<img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
								<h2>@item.Price.ToString("#,##0 VNĐ", new System.Globalization.CultureInfo("vi-VN"))</h2>
								<p>@item.Name</p>
								<p>Danh mục: @item.Category.Name</p>
								<p>Thương hiệu: @item.Brand.Name</p>
								<a class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							</div>
							</a>
						</div>
					
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li>
								<a asp-action="Add" asp-controller="Wishlist" asp-route-id="@item.Id">
									<i class="fa fa-plus-square"></i> Add to wishlist
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		}
	</div><!--features_items-->
