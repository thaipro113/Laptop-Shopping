@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed"; 
}
<h3>List Product</h3>
<a asp-area="Admin" asp-action="Create" class=" btn btn-success btn-sm" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Danh mục sản phẩm</th>
            <th scope="col">Thương hiệu </th>
            <th scope="col">Quản lý sản phẩm </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@item.Image" width="120"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>

            </tr>
        }
        
       
    </tbody>
</table>