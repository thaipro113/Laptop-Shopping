@model ProductModel
@{
    ViewData["title"] = "Edit Product";
}
<h4>Edit Product</h4>
<div class="col-md-9">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id"/>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Chọn danh mục</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Thương hiệu<label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                        <option>--Chọn thương hiệu</option>
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control-file" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img src="~/media/products/@Model.Image" width="120">
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
    <a asp-action="Index" class=" btn btn-success btn-sm">Quay lại danh sách sản phẩm</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}