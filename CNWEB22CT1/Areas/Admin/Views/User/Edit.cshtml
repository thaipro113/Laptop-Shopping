@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h4>Edit User</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>UserName</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>PassWord</label>
            <input asp-for="PasswordHash" class="form-control">
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>
        <div class="form-group">
            <label for="Roles">Roles</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles"></select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Sửa</button>
        </div>
    </form>
    <a asp-action="Index" class=" btn btn-success btn-sm">Quay lại người dùng</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}