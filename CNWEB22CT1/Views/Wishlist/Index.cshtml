@model IEnumerable<CNWEB22CT1.Models.WishlistModel>

<div class="container mt-5">
    <h1 class="text-center">Danh sách Wishlist của bạn</h1>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("#,##0 VNĐ", new System.Globalization.CultureInfo("vi-VN"))</td>
                        <td>
                            <img src="~/media/products/@item.Product.Image" alt="@item.Product.Name" width="80" />
                        </td>
                        <td>
                            <a asp-action="Remove" asp-controller="Wishlist" asp-route-id="@item.Id" class="btn" style="background-color:orangered;color:white">Xóa</a>
                            <a asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Product.Id" class="btn" style="background-color:green;color:white">Thêm vào giỏ hàng</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Danh sách wishlist của bạn trống.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
